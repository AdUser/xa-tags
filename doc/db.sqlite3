DROP TABLE IF EXISTS s_info;
CREATE TABLE IF NOT EXISTS s_info (
  version   INT(2) NOT NULL DEFAULT 1;
);

DROP TABLE IF EXISTS s_files;
CREATE TABLE IF NOT EXISTS s_files (
  crc_path  CHAR(8) NOT NULL DEFAULT 0,
  crc_name  CHAR(8) NOT NULL DEFAULT 0,
  crc_uniq  CHAR(8) NOT NULL DEFAULT 0,
  path      TEXT DEFAULT "",
  name      TEXT DEFAULT "",
  tags      TEXT DEFAULT "",
  PRIMARY KEY (crc_path, crc_name, crc_uniq)
);

